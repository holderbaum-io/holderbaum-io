<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <style>
@font-face {
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url(/stylesheets/fonts/montserrat-regular.ttf) format('truetype');
}
@font-face {
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 700;
  font-display: swap;
  src: url(/stylesheets/fonts/montserrat-bold.ttf) format('truetype');
}
    </style>
    <%= stylesheet_link_tag "site" %>
  </head>
  <body>
    <div class="Background">
      <header class="container">
        <nav class="Header">
          <img class="Header-image" src="/images/holderbaum.svg"></img>
          <ul class="Header-links">
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </nav>
      </header>
      <main class="container">
      <%= yield %>
      </main>
      <footer class="container">
        <nav>
          <img src="/images/holderbaum-light.svg"></img>
          <ul>
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Legal Notice</a></li>
          </ul>
        </nav>
      </footer>
    </div>
  </body>
</html>
